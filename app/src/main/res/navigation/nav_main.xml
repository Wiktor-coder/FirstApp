<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">
<!--singlePostFragment-->
    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.fragment.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment2"
            app:destination="@id/newPostFragment2" />
        <action
            android:id="@+id/action_feedFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@id/action_feedFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />

    </fragment>
    <fragment
        android:id="@+id/newPostFragment2"
        android:name="ru.netology.nmedia.fragment.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />

        <fragment
            android:id="@+id/editPostFragment"
            android:name="ru.netology.nmedia.fragment.EditPostFragment"
            android:label="fragment_edit_post"
            tools:layout="@layout/fragment_edit_post">
            <argument
                android:name="postId"
                app:argType="long" />
        </fragment>

    <fragment
        android:id="@+id/singlePostFragment"
        android:name="ru.netology.nmedia.fragment.SinglePostFragment"
        android:label="Post">
        <argument
            android:name="postId"
            app:argType="long" />
    </fragment>

</navigation>